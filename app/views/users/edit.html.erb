<div class="columns">
  <div class="column is-4">
    <%= render partial: 'form_errors', locals: { resource: @user } %>

    <%= form_for @user do |f| %>
      <div class="box">
        <div class="field">
          <%= f.label :name, class: 'label' %>
          <div class="control">
            <%= f.text_field :name, class: 'input', required: true %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: 'label' %>
          <div class="control">
            <%= f.password_field :password, class: 'input', required: true %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: 'label' %>
          <div class="control">
            <%= f.password_field :password_confirmation, class: 'input', required: true %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.submit 'Submit', class: 'button is-primary' %>
        <%= link_to 'Cancel', links_path, class: 'button is-link' %>
      </div>

      <script>
        $(document).ready(function(){
          $('.field_with_errors input').focus(function(){
            $(this).parent().removeClass('field_with_errors');
          });
        });
      </script>
    <% end %>
  </div>
</div>
